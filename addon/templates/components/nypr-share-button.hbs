{{#nypr-popup-menu text=text icon="share" as |closePopup|}}
  <ul class="nypr-sharebutton-list">
    {{yield (hash
      button=(component
        'nypr-share-button/button'
        openPopup=(action 'popupShareWindow')
        closePopup=closePopup
        shareUrl=shareUrl
        shareText=shareText
        data-category=data-category
        data-action=data-action
        data-label=data-label)
    )}}
  </ul>
{{/nypr-popup-menu}}
